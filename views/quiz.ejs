                        <input name="nine" type="radio" aria-label="Aragorn" value="e" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Gandalf" value="f" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Galadriel" value="g" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Gollum" value="h" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Radagast" value="i" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Samwise" value="j" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Sauron" value="k" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="nine" type="radio" aria-label="Treebeard" value="l" class="btn btn-secondary" id="questionbutton"></input>
                        </div>
                    </div>
  
                  <a href="#slide11" class="btn btn-circle btn-secondary">❯</a>
                </div>
              </div> 

              <div id="slide11" class="carousel-item relative w-full  h-[calc(100vh-68px)]">
                <img src="background11.jpg" class="w-full object-cover"/>
                <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                  <a href="#slide10" class="btn btn-circle btn-secondary">❮</a> 
  
                  <div id="questions">
                      <div class="card w-96 bg-base-100 shadow-xl">
                          <div class="card-body">
                            <h2 class="card-title">Question Ten:</h2>
                            <p>What is your favorite color?</p>
                          </div>
                        </div>
      
                        <input name="ten" type="radio" aria-label="Red" value="a" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="ten" type="radio" aria-label="Blue" value="b" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="ten" type="radio" aria-label="Green" value="c" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="ten" type="radio" aria-label="Black" value="d" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="ten" type="radio" aria-label="Yellow" value="e" class="btn btn-secondary" id="questionbutton"></input>
                        <input name="ten" type="radio" aria-label="I can't decide!" value="f" class="btn btn-secondary" id="questionbutton"></input>
                </div>
  
                  <a href="#slide12" class="btn btn-circle btn-secondary">❯</a>
                </div>
            </div>

            <div id="slide12" class="carousel-item relative w-full h-[calc(100vh-68px)]">
              <img src="background12.avif" class="w-full object-cover" />
              <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                <a href="#slide11" class="btn btn-circle btn-secondary">❮</a> 

                <div id="questions">
                    <div class="card w-96 bg-base-100 shadow-xl">
                        <div class="card-body">
                          <h2 class="card-title">Your path awaits!</h2>
                          <p></p>
                        </div>
                      </div>
    
                      <input name="submit" type="submit" aria-label="Radio" value="Submit" class="btn btn-secondary" id="questionbutton"></input>
                    </div>

                <a href="#slide1" class="btn btn-circle btn-secondary">❯</a>
